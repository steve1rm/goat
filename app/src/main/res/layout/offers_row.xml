<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove_circle_outline_black_24dp"/>

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivOptions"
        android:text="Size 8.0/ Tubular Doom Primeknit Core Black"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif-condensed"/>

    <TextView
        android:id="@+id/tvPartNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivOptions"
        android:layout_below="@id/tvSize"
        android:text="S74921"
        android:textSize="8dp"/>

    <ImageView
        android:id="@+id/ivSneaker"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvPartNumber"
        android:src="@drawable/sneakers_200"
        android:scaleType="fitXY"/>

    <include
        android:id="@+id/top_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPartNumber"
        android:layout_toRightOf="@id/ivSneaker"
        layout="@layout/top_offers"/>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/top_offers"
        android:layout_below="@id/tvPartNumber"
        layout="@layout/offers_button"/>

</RelativeLayout>