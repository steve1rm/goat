<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/ivShoe"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_directions_run_white_36dp"/>


    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_white_36dp"/>

    <ImageView
        android:id="@+id/ivNavigate"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_explore_white_36dp"/>

    <ImageView
        android:id="@+id/ivTag"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_local_offer_white_36dp"/>

    <ImageView
        android:id="@+id/ivSaleUp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_trending_up_white_36dp"/>
</LinearLayout>